@using Microsoft.AspNetCore.Identity
@using Backend5.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<form  class="navbar-right">
    <ul class="navbar-nav mr-4">
        @if (SignInManager.IsSignedIn(User))
        {


            <li class="nav-item mr-4">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    <span class="navbar-text text-light">@UserManager.GetUserName(User)</span>
                </a>
            </li>
            <li class="nav-item mr-4">
                <a class="nav-link"  asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a>
            </li>

        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">Войти</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
            </li>
           
        }
    </ul>
</form>